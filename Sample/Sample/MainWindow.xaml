<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:cv="clr-namespace:Sample"
        Title="MainWindow" WindowStyle="None" Topmost="True" Height="50" Width="125">
    <Window.Resources>
        <cv:ColorConverter x:Key="ColorConverter"/>
    </Window.Resources>
    <Grid MouseDown="Drag_click">
        <!---->
        <TextBlock TextAlignment="Center" VerticalAlignment="Center" FontSize="25" Foreground="{Binding CurrentQuote, Converter={StaticResource ColorConverter}}"   Text="{Binding CurrentQuote}"/>
    </Grid>
</Window>
